@model IEnumerable<SPO.Models.Subject>

@{
    ViewBag.Title = "SPO - Subject List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("+ Create a New Subject", "Create", null, new { @class = "btn btn-default btn-outline-primary" })
</p>
           
<div class="card">
        <div class="card-header">
            <h3>Subjects overview</h3>
        </div>
        <div class="card-body">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Credits)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Enrolled)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Semester)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Professor)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    var Enrolled = item.Enrolled.Day + "." + item.Enrolled.Month + "." + item.Enrolled.Year;
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Credits)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Enrolled)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Semester)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Professor)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-warning" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-info" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>


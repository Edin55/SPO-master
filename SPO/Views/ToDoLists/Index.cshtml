@model IEnumerable<SPO.Models.ToDoList>

@{
    ViewBag.Title = "SPO - ToDo Task Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p> 
    @Html.ActionLink("+ Create a New Task", "Create", null, new { @class = "btn btn-default btn-outline-primary" })
</p>
<div class="card">
    <div class="card-header">
        <h4>ToDo tasks overview</h4>
    </div>
    <div class="card-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Started)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Finished)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                var Started = item.Started.Day + "." + item.Started.Month + "." + item.Started.Year;
                string Finished = "";
                if (item.Finished.HasValue)
                {
                    Finished = item.Finished.Value.Day + "." + item.Finished.Value.Month + "." + item.Finished.Value.Year;
                }
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Started)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Finished)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-default btn-warning" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-info" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-default btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

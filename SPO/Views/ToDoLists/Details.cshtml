@model SPO.Models.ToDoList

@{
    ViewBag.Title = "SPO - ToDo Task Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var Started = Model.Started.Day + "." + Model.Started.Month + "." + Model.Started.Year;
    string Finished = "";
    if (Model.Finished.HasValue)
    {
        Finished = Model.Finished.Value.Day + "." + Model.Finished.Value.Month + "." + Model.Finished.Value.Year;
    }
}

<div class="card">
    <div class="card-header">
        <h4>ToDo Task details</h4>
    </div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Started)
            </dt>

            <dd>
                @Html.DisplayFor(model => Started)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => Finished)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Finished)
            </dd>

        </dl>
        <p>
            @Html.ActionLink("Edit this task", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
        </p>
    </div>
</div>
